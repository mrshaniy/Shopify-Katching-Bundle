{% style %}
    .product-form__input.product-form__quantity {
       display: none;
    }
    .nws-bundle-item {
      outline: 1px solid #b2b2b2;
      padding: 15px 20px;
      border-radius: 30px;
      position: relative;
      transition: 0.2s ease-in-out;
    }
    .nws-bundle-item:hover {
      outline: 2px solid #b2b2b2;
    }
    .nws-bundle-item-wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .nws-radio-btn {
      /* position: relative; */
      width: 25px;
      height: 25px;
      border: 1px solid #08dcff;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .nws-same-radio {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      display: block;
      padding: 0;
      margin: 0;
      opacity: 0;
    }
    .nws-radio-box {
      width: 17px;
      height: 17px;
      border-radius: 50%;
    }
    .nws-bundle-item.nws-active .nws-radio-box {
      background: #08dcff;
    }
    .nws-bundle-item.nws-active {
      outline: 2px solid #08dcff;
    }
    .nws-bundle-name {
       font-size: 20px;
       margin-top: 0;
       margin-bottom: 0;
       line-height: 1;
       color: #000;
       font-weight: 600;
    }
    .nws-bundle-price {
      font-size: 16px;
      color: #000;
      font-weight: 600;
      text-align: end;
      margin-top: 0;
      margin-bottom: 0;
    }
    .nws-bundle-price-group {
      text-align: center;
    }
    .nws-bundle-price-group del.nws-bundle-price {
      font-weight: 300;
      font-size: 14px;
    }
    .nws-d-flex {
       display: flex;
       align-items: center;
       gap: 18px
    }
    .nws-bundle-item {
       margin-bottom: 20px;
    }
    .nws-bundle-heading {
       font-size: 14px;
       font-weight: 700;
       text-align: center;
       margin-top: 0;
       margin-bottom: 16px;
       position: relative;
       display: flex;
       align-items: center;
    }
    span.nws-you-save {
       font-size: 14px;
       color: #555555;
       margin-top: 5px;
       display: block;
    }
    .nws-bundle-heading:before {
       content: "";
       flex-grow: 1;
       height: 2px;
       background: #b2b2b2;
       margin-right: 10px;
    }
    .nws-bundle-heading:after {
       content: "";
       flex-grow: 1;
       height: 2px;
       background: #b2b2b2;
       margin-left: 10px;
    }
    .nws-flex-checkbox {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .nws-flex-checkbox label{
       font-size: 13px;
    }
    label.nws-color-label {
      font-size: 15px;
  }
  .nws-slec-three-variant, .nws-slec-two-variant {
    z-index: 99;
    position: relative;
    display: none;
  }
  .nws-bundle-item.nws-active .nws-slec-three-variant, .nws-bundle-item.nws-active .nws-slec-two-variant {
    display: block;
  }
{% endstyle %}
