      const radioButtons = document.querySelectorAll('.nws-same-radio');
    radioButtons.forEach(radio => {
      radio.addEventListener('change', function() {
        const allRadioBtns = document.querySelectorAll('.nws-bundle-item');
        allRadioBtns.forEach(btn => btn.classList.remove('nws-active'));

        const parentRadioBtn = this.closest('.nws-bundle-item');
        if (this.checked) {
          parentRadioBtn.classList.add('nws-active');
        }
      });
    });



